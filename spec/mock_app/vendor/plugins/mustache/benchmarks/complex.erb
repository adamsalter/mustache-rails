<h1><%= header %></h1>
<% if not item.empty? %>
  <ul>
  <% for i in item %>
    <% if i[:current] %>
      <li><strong><%= i[:name] %></strong></li>
    <% else %>
      <li><a href="<%= i[:url] %>"><%= i[:name] %></a></li>
    <% end %>
  <% end %>
  </ul>
<% end %>
<% if item.empty? %>
  <p>The list is empty.</p>
<% end %>